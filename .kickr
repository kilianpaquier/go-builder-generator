version: 1
ci:
  provider: github
  options:
    - codecov
    - codeql
    - harden-runner
    - ossf-scorecard
    - renovate:personal-token
  release:
    auth: github-token
    auto: true
dependencies:
  manager: renovate
license: mit
maintainers:
  - name: kilianpaquier
platform: github
pre-commit:
  - conventional-commits
